<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="15.0" prefHeight="480.0" prefWidth="640.0" vgap="15.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vizsgaremek_javafx.UpdatefoodController">
   <columnConstraints>
      <ColumnConstraints halignment="RIGHT" minWidth="75.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
   </rowConstraints>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <children>
      <Label text="Étel neve" />
      <Label text="Kalória" GridPane.rowIndex="1" />
      <Label text="Protein" GridPane.rowIndex="3" />
      <TextField fx:id="nameField" GridPane.columnIndex="1" />
      <Spinner fx:id="proteinField" prefWidth="10000.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#updateClick" prefWidth="10000.0" text="Frissít" GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
      <Label text="Szénhidrát" GridPane.rowIndex="2" />
      <Label text="Zsír" GridPane.rowIndex="4" />
      <Spinner fx:id="fatField" prefWidth="10000.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Spinner fx:id="carboField" prefWidth="10000.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Spinner fx:id="calorieField" prefWidth="10000.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </children>
</GridPane>
